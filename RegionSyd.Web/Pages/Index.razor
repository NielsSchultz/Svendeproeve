    <div class="row justify-content-center">

            <h5 class="text-center pb-2" style="color:#6b747c">Region Syds Sundhedsportal login</h5>

        <div class="col-sm-12 col-md-1 col-lg-1">
            <button class="btn btn-green p-1 w-100" @onclick=PatientLogin>Borger</button>
